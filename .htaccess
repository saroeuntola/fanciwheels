# =========================================
# 1. Enable Rewrite Engine
# =========================================
RewriteEngine On

# =========================================
# 2. Force extensionless URLs for .php
# =========================================
# Redirect /file.php → /file
RewriteCond %{THE_REQUEST} \s([^\s]+)\.php[\s?] [NC]
RewriteRule ^ %1 [R=301,L]

# Internally map /file → /file.php (if exists)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*)$ $1.php [L]

# =========================================
# 3. Deny access to sensitive files
# =========================================
<FilesMatch "\.(env|ini|log|bak|sql|git|htaccess)$">
    Require all denied
</FilesMatch>

# Block WordPress xmlrpc.php if not needed
<Files xmlrpc.php>
    Require all denied
</Files>

# =========================================
# 4. Prevent directory listing
# =========================================
Options -Indexes

# =========================================
# 5. Block common exploit patterns
# =========================================
<IfModule mod_rewrite.c>
    RewriteCond %{QUERY_STRING} (\.\./|\.\.\\) [NC,OR]
    RewriteCond %{QUERY_STRING} (etc/passwd|boot.ini|\.ini|\.log) [NC,OR]
    RewriteCond %{QUERY_STRING} (\%27)|(\')|(\-\-)|(\%23)|(#) [NC,OR]
    RewriteCond %{QUERY_STRING} (\%3C)|(<)|(\%3E)|(>) [NC]
    RewriteRule .* - [F]
</IfModule>

# =========================================
# 6. Strong Security Headers
# =========================================
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Strict-Transport-Security "max-age=15552000; includeSubDomains; preload"
</IfModule>


# =========================================
# 7. Enable Gzip Compression (Performance)
# =========================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript application/json
</IfModule>

# =========================================
# 8. Custom 404 Page
# =========================================
ErrorDocument 404 /404.php


# Disable PHP version exposure
<IfModule mod_php7.c>
    php_flag expose_php Off
</IfModule>

<IfModule mod_php8.c>
    php_flag expose_php Off
</IfModule>

<IfModule mod_headers.c>
    Header unset X-Powered-By
</IfModule>
